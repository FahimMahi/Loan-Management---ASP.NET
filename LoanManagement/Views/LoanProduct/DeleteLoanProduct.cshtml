@model LoanManagement.EF.LoanProduct

@{
    ViewBag.Title = "Delete Loan Product";
}

<h2>Are you sure you want to delete this loan product?</h2>

<div>
    <h4>Loan Product Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Product Name</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>

        <dt>Interest Rate</dt>
        <dd>@Html.DisplayFor(model => model.InterestRate)%</dd>

        <dt>Term (Months)</dt>
        <dd>@Html.DisplayFor(model => model.TermMonths)</dd>

        <dt>Eligibility Criteria</dt>
        <dd>@Html.DisplayFor(model => model.EligibilityCriteria)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "ManageLoanProducts", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to Manage Loan Products", "ManageLoanProducts", null, new { @class = "btn btn-info" })
</div>
