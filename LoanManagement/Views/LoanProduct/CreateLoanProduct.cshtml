@model LoanManagement.DTOs.LoanProductDTO

@{
    ViewBag.Title = "Create Loan Product";
}

<h2>Create New Loan Product</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProductName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InterestRate, new { @class = "control-label" })
        @Html.EditorFor(model => model.InterestRate, new { htmlAttributes = new { @class = "form-control", @type = "number", step = "0.01" } })
        @Html.ValidationMessageFor(model => model.InterestRate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TermMonths, new { @class = "control-label" })
        @Html.EditorFor(model => model.TermMonths, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
        @Html.ValidationMessageFor(model => model.TermMonths, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.EligibilityCriteria, new { @class = "control-label" })
        @Html.EditorFor(model => model.EligibilityCriteria, new { htmlAttributes = new { @class = "form-control", rows = 4 } })
        @Html.ValidationMessageFor(model => model.EligibilityCriteria, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}

<div>
    @Html.ActionLink("Back to Manage Loan Products", "ManageLoanProducts", null, new { @class = "btn btn-info" })
</div>
