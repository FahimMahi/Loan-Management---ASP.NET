@model IEnumerable<LoanManagement.EF.LoanProduct>

@{
    ViewBag.Title = "Manage Loan Products";
}

<h2>Manage Loan Products</h2>

<p>
    <a href="@Url.Action("CreateLoanProduct")" class="btn btn-primary">Add New Loan Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Interest Rate</th>
            <th>Term Months</th>
            <th>Eligibility Criteria</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.InterestRate)</td>
                <td>@Html.DisplayFor(modelItem => item.TermMonths)</td>
                <td>@Html.DisplayFor(modelItem => item.EligibilityCriteria)</td>
                <td>
                    <a href="@Url.Action("EditLoanProduct", new { id = item.ProductID })" class="btn btn-default">Edit</a>
                    <a href="@Url.Action("DeleteLoanProduct", new { id = item.ProductID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["Msg"] != null)
{
    <div style="color: green;">@TempData["Msg"]</div>
}
<div>
    @Html.ActionLink("Back to Dashboard", "LoanOfficerDashboard", "LoanOfficer", null, new { @class = "btn btn-info" })
</div>