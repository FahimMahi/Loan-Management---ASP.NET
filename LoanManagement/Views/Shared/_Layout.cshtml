<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Loan Management System", "HomePage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @{

                        if (Session["userID"] != null)
                        {

                            if (Session["Role"] != null)
                            {
                                @*if (Session["Role"].Equals("Admin"))
                                {
                                    <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                }*@
                                if (Session["Role"].Equals("Loan Officer"))
                                {
                                    <li>@Html.ActionLink("Loan Officer Dashboard", "LoanOfficerDashboard", "LoanOfficer", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Review Applications", "ReviewApplications", "Application", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Applicant Profiles", "ApplicantProfiles", "Applicant", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Manage Loan Products", "ManageLoanProducts", "LoanProduct", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                }

                                if (Session["Role"].Equals("Applicant"))
                                {
                                    <li>@Html.ActionLink("Applicant Dashboard", "ApplicantDashboard", "Applicant", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("My Applications", "MyApplications", "Application", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("View Loan Product", "ViewLoanProduct", "LoanProduct", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Apply Application", "ApplyApplication", "Application", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Edit Profile", "EditProfile", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                }
                            }
                        }

                        else
                        {
                            <li>@Html.ActionLink("Home", "HomePage", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
